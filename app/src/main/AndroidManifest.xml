<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.gov.hartrans.etickets">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:largeScreens="false"
        android:normalScreens="false"
        android:requiresSmallestWidthDp="1024"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/ic_launcher"
        android:orientation="vertical"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/HiddenTitleTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BookEticketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AvailableServices"
            android:label="@string/title_activity_available_services"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TripLayout"
            android:label="@string/title_activity_trip_layout"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PassengerInfo"
            android:label="@string/title_activity_passenger_info"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".CustomerDetails"
            android:label="@string/title_activity_customer_details"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TestPayment"
            android:label="@string/title_activity_test_payment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".WebShellActivity" />
        <activity
            android:name=".PaywithPayzapp"
            android:label="@string/title_activity_paywith_payzapp"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".orsStatus"
            android:label="@string/title_activity_ors_status"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".PaywithUPI"
            android:label="@string/title_activity_paywith_upi"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>