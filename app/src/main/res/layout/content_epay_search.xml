<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.gov.hartrans.etickets.EpaySearch"
    tools:showIn="@layout/activity_epay_search">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:background="#CCffffff"
        android:paddingBottom="35sp"
        android:paddingTop="35sp"
        android:layout_height="wrap_content"
        app:divider="@color/colorAccent"
        app:dividerPadding="5sp"
        android:orientation="vertical"        >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#000"
            android:id="@+id/til_searchValue"
            android:layout_margin="35sp">
            <AutoCompleteTextView
                android:id="@+id/tv_SearchValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bus no. or Conductor's Mobile No."
                android:inputType="textPhonetic"
                android:maxLines="1"
                android:singleLine="true" >
            </AutoCompleteTextView>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/tv_message"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:paddingRight="5dp"
            android:text="message"
            android:textColor="#1f2af2"
            android:textSize="12sp" />
        <Button
            android:layout_marginTop="15sp"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/bt_search"
            android:background="@drawable/rounded_corner_box"
            android:textColor="#ffffff"
            android:layout_marginBottom="25sp"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bullet1"
                android:textStyle="bold"
                android:layout_width="20sp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:text="1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/bullet1Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="ePay ONLINE/cashless for bus tickets on route after boarding bus. Instead paying cash to bus conductor, passengers can pay online for tickets using cashless payment options i.e. UPI, E-Wallets, Credit cards/Debit cards etc."
                android:textColor="#fc0101"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bullet4"
                android:textStyle="bold"
                android:layout_width="20sp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:paddingRight="5dp"
                android:text="2"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/bullet4Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="@string/prompt_info_query4"
                android:textColor="#fc0101"
                android:textSize="12sp" />
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
