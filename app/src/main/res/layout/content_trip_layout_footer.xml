<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="#ffffff"
    android:id="@+id/rl_footer"
    android:layout_marginLeft="12sp"
    android:layout_marginRight="12sp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:id="@+id/seats_selected"
        android:text="manojK."
        />
    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="start"
        android:textAlignment="textStart"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:id="@+id/fareAmount"
        android:text="Sangwan"
        android:layout_below="@+id/seats_selected"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="start"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:id="@+id/fareAmount1"
        android:text="Sangwan"
        android:layout_below="@+id/seats_selected"
        android:layout_toRightOf="@+id/fareAmount"
        />

    <Button
        android:id="@+id/bt_book_eticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Book \ne-Ticket "
        android:textStyle="bold"
        android:background="@drawable/rounded_corner_box"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15sp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:id="@+id/fareAmount2"
        android:text="Sangwan"
        android:layout_below="@+id/bt_book_eticket"
        />

</RelativeLayout>